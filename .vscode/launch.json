    "version": "1.0.0",
    "configurations": [
        {
            "name": "Visual Studio - ts-microservice-sample - server - compile asn1 files",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": ["-o", "${workspaceFolder}/samples/ts-microservice/server/src/stub", "-JT", "-j", "-RTS_SERVER", "*.asn1"],
            "cwd": "${workspaceFolder}/samples/interface",
            "preLaunchTask": "CMake: build",
            "console": "externalTerminal"
        },
        {
            "name": "Visual Studio - ts-microservice-sample - client - compile asn1 files",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": ["-o", "${workspaceFolder}/samples/ts-microservice/client/src/stub", "-JT", "-j", "-RTS_CLIENT_BROWSER", "*.asn1"],
            "cwd": "${workspaceFolder}/samples/interface",
            "preLaunchTask": "CMake: build",
            "console": "externalTerminal"
        },
        {
            "name": "LLDB - ts-microservice-sample - server - compile asn1 files",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": ["-o", "${workspaceFolder}/samples/ts-microservice/server/src/stub", "-JT", "-j", "-RTS_SERVER", "*.asn1"],
            "cwd": "${workspaceFolder}/samples/interface",
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "LLDB - ts-microservice-sample - client - compile asn1 files",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": ["-o", "${workspaceFolder}/samples/ts-microservice/client/src/stub", "-JT", "-j", "-RTS_CLIENT_BROWSER", "*.asn1"],
            "cwd": "${workspaceFolder}/samples/interface",
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "LLDB - openapi - compile asn1 files",
            "type": "lldb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": ["-o", "${workspaceFolder}/output/openapi", "-OA", "${workspaceFolder}/samples/interface/*.asn1"],
            "preLaunchTask": "CMake: build"
        },
    ],
	"tasks": [
