{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "keepProfileChanges": true,
            "name": "Firefox https://",
            "url": "https://${env:COMPUTERNAME}.${env:USERDNSDOMAIN}",
            "webRoot": "${workspaceFolder}",
            "profile": "default",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**",
                "react-dom.development.js"
            ],
            "pathMappings": [
                {
                    "url": "webpack://microservice_client/src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome  https://",
            "url": "https://${env:COMPUTERNAME}.${env:USERDNSDOMAIN}",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Edge  https://",
            "url": "https://${env:COMPUTERNAME}.${env:USERDNSDOMAIN}",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "keepProfileChanges": true,
            "name": "Firefox http://",
            "url": "http://${env:COMPUTERNAME}.${env:USERDNSDOMAIN}",
            "webRoot": "${workspaceFolder}",
            "profile": "default",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**",
                "react-dom.development.js"
            ],
            "pathMappings": [
                {
                    "url": "webpack://microservice_client/src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome http://",
            "url": "http://${env:COMPUTERNAME}.${env:USERDNSDOMAIN}",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Edge http://",
            "url": "http://${env:COMPUTERNAME}.${env:USERDNSDOMAIN}",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true
        }
    ]
}